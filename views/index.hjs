<!DOCTYPE html>
<html>
    <head>
        <title>{{ title }}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel='stylesheet' href='/css/style.css' />
        <script data-main="js/main" src="js/lib/require-jquery.js"></script>
    </head>
    <body>

                    <h1>{{ title }}</h1>

        <form id='ticketForm' action="/ticket/submitTicket" method="post" width="100%">
            <div class="grid grid-pad">
                <div class="col-2-12">
                    <div class="content">
                        <label>Nom</label>
                    </div>
                </div>
                <div class="col-10-12">
                    <div class="content">
                        <input type="text" name="name"/>
                    </div>
                </div>
            </div>
            <div class="grid grid-pad">
                <div class="col-2-12">
                    <div class="content">
                        <label>Email</label>
                    </div>
                </div>
                <div class="col-10-12">
                    <div class="content">
                        <input type="email" name="email"/>
                    </div>
                </div>
            </div>
            <div class="grid grid-pad">
                <div class="col-1-1" style="text-align: right">
                    <div class="content">
                        <input  type="submit" value="Imprimer le ticket" />
                    </div>
                </div>
            </div>
        </form>

    </body>
</html>